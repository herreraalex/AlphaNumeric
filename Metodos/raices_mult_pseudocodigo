read tol, x0, nIteraccion, funcion1, funcion2, funcion3
fx = funcion1(x0)
dfx = funcion2(x0)
d2fx = funcion3(x0)

contador = 0
error = tol + 1
den = (dfx^2)-(fx * d2fx)
while(error > tol and fx <> 0 and den <> 0 contador < nIteraccion)
    
    x1 = x0 - ((fx * dfx)/den)
    fx = funcion1(x1)
    dfx = funcion2(x1)
    d2fx = funcion3(x1)
    den = (dfx^2)-(fx * d2fx)

    error = abs(x1-x0) 
    x0 = x1
    contador = contador + 1
end while

if(fx == 0)
    x0 "es una raíz"
else if(error < tol)
    x1 "se encontró como una aproximación a una raíz con una tolerancia de = " tol
else if(den == 0)
    "es una indeterminación"
else 
    "el método fracasó en " nIteraccion "iteraciones"
end if